
{
  "compilerOptions": {
    "target": "ES6",
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules,dist"]
}